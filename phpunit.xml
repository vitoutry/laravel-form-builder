<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true" convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
    >
    <testsuites>
        <testsuite name="Package Test Suite">
            <directory suffix=".php">./tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./src/Vitoutry</directory>
            <exclude>
                <file>./src/Vitoutry/LaravelFormBuilder/FormBuilderServiceProvider.php</file>
                <file>./src/Vitoutry/LaravelFormBuilder/Facades/FormBuilder.php</file>
                <file>./src/Vitoutry/LaravelFormBuilder/Console/FormMakeCommand.php</file>
                <file>./src/Vitoutry/LaravelFormBuilder/FormBuilderTrait.php</file>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
